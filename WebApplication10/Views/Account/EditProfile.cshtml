<h2>Edit Profile</h2>

<form method="post">
    <input type="text" name="fullName" value="@Model.FullName" placeholder="Full Name" /><br />
    <textarea name="bio" placeholder="Bio">@Model.Bio</textarea><br />
    <input type="text" name="profilePicUrl" value="@Model.ProfilePicUrl" placeholder="Profile Picture URL" /><br />
    <button type="submit">Save</button>
</form>
