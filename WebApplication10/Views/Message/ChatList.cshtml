@model IEnumerable<WebApplication10.Models.ConversationViewModel>

@{
    ViewData["Title"] = "Chat List"; // تم تغيير العنوان
}

<div class="container mt-5">
    <h2><i class="bi bi-chat-left-dots-fill"></i> قائمة المحادثات (Chat List)</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            لا توجد لديك أي محادثات حالياً.
        </div>
    }
    else
    {
        <ul class="list-group list-group-flush">
            @foreach (var conversation in Model)
            {
                <a href="@Url.Action("Chat", "Message", new { userId = conversation.OtherUserId })" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@conversation.OtherUsername</h5>
                        <small class="text-muted">@conversation.LastMessageTime.ToString("hh:mm tt - dd/MM")</small>
                    </div>
                    <p class="mb-1 text-truncate" style="max-width: 90%;">
                        @if (string.IsNullOrEmpty(conversation.LastMessageContent))
                        {
                            <span class="text-info">[ملف مرفق]</span>
                        }
                        else
                        {
                            @conversation.LastMessageContent
                        }
                    </p>
                </a>
            }
        </ul>
    }
</div>